#:kivy 2.0.0
<Calculadora>:
    orientation: 'vertical'
    TextInput:
        id: display
        font_size: 40
        readonly: True
    GridLayout:
        cols: 4
        spacing: 10
        padding: 10
        Button:
            text: '7'
            on_press: root.atualizar_display('7')
        Button:
            text: '8'
            on_press: root.atualizar_display('8')
        Button:
            text: '9'
            on_press: root.atualizar_display('9')
        Button:
            text: '/'
            on_press: root.atualizar_display('/')
        Button:
            text: '4'
            on_press: root.atualizar_display('4')
        Button:
            text: '5'
            on_press: root.atualizar_display('5')
        Button:
            text: '6'
            on_press: root.atualizar_display('6')
        Button:
            text: '*'
            on_press: root.atualizar_display('*')
        Button:
            text: '1'
            on_press: root.atualizar_display('1')
        Button:
            text: '2'
            on_press: root.atualizar_display('2')
        Button:
            text: '3'
            on_press: root.atualizar_display('3')
        Button:
            text: '-'
            on_press: root.atualizar_display('-')
        Button:
            text: 'C'
            on_press: root.limpar_display()
        Button:
            text: '0'
            on_press: root.atualizar_display('0')
        Button:
            text: '='
            on_press: root.calcular()
        Button:
            text: '+'
            on_press: root.atualizar_display('+')