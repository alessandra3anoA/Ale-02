#:kivy 2.0.0
<BotaoRedondo@Button>:
    background_color: 0, 0, 0, 0
    background_normal: ''  
    background_down: ''
    canvas.before:
        Color:
            rgba: 0.4, 0.4, 0.4, 1  
        Ellipse:
            pos: self.pos  
            size: self.size
    font_size: 24  
    size_hint: None, None 
    size: 100, 100  

<Calculadora>:
    orientation: 'vertical'
    TextInput:
        id: display
        font_size: 24
        readonly: True
        size_hint_y: 0.2
       

    GridLayout:
        cols: 4
        spacing: 10
        padding: 10

        BotaoRedondo:
            color: 0, 0, 0, 1
            text: '7'
            on_press: root.atualizar_display('7')

        BotaoRedondo:
            color: 0, 0, 0, 1
            text: '8'
            on_press: root.atualizar_display('8')

        BotaoRedondo:
            color: 0, 0, 0, 1
            text: '9'
            on_press: root.atualizar_display('9')
            

        BotaoRedondo:
            color: 0, 0, 1, 1
            text: '/'
            on_press: root.atualizar_display('/')
            

        BotaoRedondo:
            color: 0, 0, 0, 1
            text: '4'
            on_press: root.atualizar_display('4')
            

        BotaoRedondo:
            color: 0, 0, 0, 1
            text: '5'
            on_press: root.atualizar_display('5')

        BotaoRedondo:
            color: 0, 0, 0, 1
            text: '6'
            on_press: root.atualizar_display('6')

        BotaoRedondo:
            color: 0, 0, 1, 1
            text: '*'
            on_press: root.atualizar_display('*')

        BotaoRedondo:
            color: 0, 0, 0, 1
            text: '1'
            on_press: root.atualizar_display('1')

        BotaoRedondo:
            color: 0, 0, 0, 1
            text: '2'
            on_press: root.atualizar_display('2')

        BotaoRedondo:
            color: 0, 0, 0, 1
            text: '3'
            on_press: root.atualizar_display('3')
        BotaoRedondo:
            color: 0, 0, 1, 1
            text: '-'
            on_press: root.atualizar_display('-')

        BotaoRedondo:
            color: 1, 0, 0, 1
            text: 'C'
            on_press: root.limpar_display()

        BotaoRedondo:
            color: 0, 0, 0, 1
            text: '0'
            on_press: root.atualizar_display('0')

        BotaoRedondo:
            color: 1, 0, 1, 1
            text: '='
            on_press: root.calcular()
 
        BotaoRedondo:
            color: 0, 0, 1, 1
            text: '+'
            on_press: root.atualizar_display('+')
